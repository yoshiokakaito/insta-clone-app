<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div id="cober-image"  class="form-group padding-top-15 relative">
    <%= image_tag 'instagram.jpg', class: 'img-responsive article-list-image' %>
  </div>
  
  <%= f.attachment_field :image, accept: 'image/jpg,image/jpeg,image/png,' %>

  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>